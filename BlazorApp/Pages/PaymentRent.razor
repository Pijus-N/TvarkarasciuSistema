@page "/rent/{instrument_id:int}/{renter_id:int}"
@using BlazorServer.Authentication
@inject Blazored.SessionStorage.ISessionStorageService _currentSession
@using BlazorServer.Models
@using MySqlConnector
@using Dapper
@using System.Data
@inject IConfiguration _config
@inject IJSRuntime js
@inject NavigationManager navManager;
@using Stripe

<PageTitle>Payment</PageTitle>
@if(instrument == null)
{
    <a>loading...</a>
}
else
{
    <div>
        <h1>Payment for instrument</h1>
        <h3>Price: @instrument.rental_price</h3>

        Card number
        <input type="text" class="form-control"/>
        Expiration month
        <input type="text" class="form-control"/>
        Expiration year
        <input type="text" class="form-control"/>
        CVC
        <input type="text" class="form-control"/>
        <br/>
        <a type="button" class="btn btn-secondary" href="listinstrument" disabled="@loading">Back</a>
        <button type="button" class="btn btn-primary" @onclick='UpdateDatabase' disabled="@loading">Pay</button>
    </div>
}




@code
{
    [Parameter] public int instrument_id { get; set; }
    [Parameter] public int renter_id { get; set; }
    public bool loading = false;
    public Instrument instrument = new Instrument();

    protected override async Task OnInitializedAsync()
    {
        string query = $"SELECT * FROM instruments WHERE id = {instrument_id}";
        List<Instrument> instruments = await SqlLoadData<Instrument>(query);
        instrument = instruments.First();
    }

    public async void UpdateDatabase()
    {
        decimal lesson_price = new decimal(instrument.rental_price * 100);
        string payment = await ProcessPayment("4242424242424242", "4", "30", "420", lesson_price);


        if (payment == "Success")
        {
            string query = $"UPDATE `instruments` SET paid = 1, instrument_state = 'Reserved', renter_id = {renter_id} WHERE id = {instrument_id}";
            await SqlSaveData(query);
            await js.InvokeVoidAsync("alert", "Payment processed");
            navManager.NavigateTo("listinstruments");
        }
        else
        {
            await js.InvokeVoidAsync("alert", "Payment failed. Please try again");
        }

    }

